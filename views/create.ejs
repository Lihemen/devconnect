<section class="container">
	<h1 class="large text-primary">
		Create Your Profile
	</h1>
	<p class="lead">
		<i class="fas fa-user"></i>Let's get some information to make your profile
		stand out
	</p>
	<small class="text-danger">* = required fields</small>
	<form action="/profiles" class="form" , method="POST">
		<div class="form-group">
			<select name="status">
				<option value="0">* Select Professional Status </option>
				<option value="Developer">Developer</option>
				<option value="Junior Developer">Junior Developer </option>
				<option value="Senior Developer">Senior Developer </option>
				<option value="Manager">Manager</option>
				<option value="Student">Student</option>
				<option value="Teacher">Teacher</option>
				<option value="Intern">Intern</option>
				<option value="Other">Others</option>
			</select>
			<small class="form-text">
				Give us an idea of where you are at in your career
			</small>
		</div>
		<div class="form-group">
			<input type="text" placeholder="Company" name="company" />
			<small class="form-text"
				>Could be your own company or one where you work in</small
			>
		</div>
		<div class="form-group">
			<input type="text" placeholder="Website" name="website" />
			<small class="form-text">Could be your own or a company website</small>
		</div>
		<div class="form-group">
			<input type="text" placeholder="Location" name="location" />
			<small class="form-text">City and state, suggested Ikeja, LG</small>
		</div>
		<div class="form-group">
			<input type="text" placeholder="* Skills" name="skills" />
			<small class="form-text"
				>Please use comma seperated values (eg. HTML, CSS, SASS, C#)</small
			>
		</div>
		<div class="form-group">
			<input type="text" placeholder="Github Username" name="github" />
			<small class="form-text"
				>Please include your github profile to get access to latest repos</small
			>
		</div>
		<div class="form-group">
			<textarea name="bio" placeholder="A short bio of yourself"></textarea>
			<small class="form-text"
				>Please include your github profile to get access to latest repos</small
			>
		</div>
		<div class="my-2">
			<button type="button" class="btn btn-light">
				Add Social Network Links
			</button>
			<button class="btn btn-dark">Optional</button>
		</div>

		<div class="form-group social-input">
			<i class="fab fa-twitter fa-2x"></i>
			<input type="text" placeholder="Twitter URL" />
		</div>
		<div class="form-group social-input">
			<i class="fab fa-facebook-square fa-2x"></i>
			<input type="text" placeholder="Facebook URL" />
		</div>
		<div class="form-group social-input">
			<i class="fab fa-youtube-square fa-2x"></i>
			<input type="text" placeholder="Youtube URL" />
		</div>
		<div class="form-group social-input">
			<i class="fab fa-linkedin fa-2x"></i>
			<input type="text" placeholder="LinkedIn URL" />
		</div>
		<div class="form-group social-input">
			<i class="fab fa-instagram fa-2x"></i>
			<input type="text" placeholder="Instagram URL" />
		</div>
		<input type="submit" class="btn btn-primary my-1" />
		<a href="/dashboard" class="btn btn-light my-1">Go Back</a>
	</form>
</section>
